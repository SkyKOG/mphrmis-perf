    </tr>
  </thead>
  <tbody>
    <tr>
        <td><%= f.association :month,label_method: :month_name, value_method: :id, include_blank: false, :selected => 4%>
          </td>
        <td><%= f.input :year, collection: 1960..2050,include_blank: false, :selected => 2013 %></td>
        <td></td>
    </tr>
  <tr>
     <%= f.association :hospital,label_method: :hospital_name, value_method: :id, include_blank: false, :as => :hidden%>
      <td><%= f.association :hospital,label_method: :hospital_name, value_method: :id,include_blank: false, disabled: true %></td>
      <td><%= f.association :division,label_method: :division_name, value_method: :id, include_blank: false%></td>
      <td><%= f.association :district,label_method: :district_name, value_method: :id, include_blank: false%></td>
        </tr>
  <tr>
      
      <td><%= f.input :outdoor , label: 'No. of Outdoor Surgeries' , input_html: { value: '0' } %></td>
      <td><%= f.input :indoor , label: 'No. of Indoor Surgeries' , input_html: { value: '0' }%></td>
      <td><%= f.input :minor_surgery , label: 'No. of Minor Surgeries' , input_html: { value: '0' }%></td>
  </tr>
  <tr>
    
      <td><%= f.input :major_surgery , label: 'No. of Major Surgeries' , input_html: { value: '0' }%></td>
      <td><%= f.input :normal_delivery , label: 'No. of Normal Delivery' , input_html: { value: '0' }%></td>
      <td><%= f.input :caesarion_delivery , label: 'No. of Caesarion Delivery' , input_html: { value: '0' }%></td>
  </tr>
  <tr>

      
      <td><%= f.input :pathology , label: 'Pathology' , input_html: { value: '0' }%></td>
       <td><%= f.input :image_scans , label: 'No. of X-Ray / Digital X-Ray / Dental X-Ray' , input_html: { value: '0' }%></td>
      <td><%= f.input :ultra_sound , label: 'No. of Ultra-Sound' , input_html: { value: '0' }%></td>
  </tr>
  <tr>

     
      <td><%= f.input :ctmri , label: 'No. of CT Scan / MRI' , input_html: { value: '0' }%></td>
      <td><%= f.input :ecg , label: 'No. of ECG' , input_html: { value: '0' }%></td>
      <td><%= f.input :ecotmt , label: 'No. of ECO / TMT' , input_html: { value: '0' }%></td>
     
  </tr>
  <tr>
       <td><%= f.input :blood_unit_transfused , label: 'No. of Blood Unit Transfused' , input_html: { value: '0' }%></td>
      <td><%= f.input :hemo , label: 'No. of Hemo-Dialysis' , input_html: { value: '0' }%></td>
      <td><%= f.input :mlc , label: 'No. of MLC' , input_html: { value: '0' } %></td>
  </tr>
  <tr>

      
      <td><%= f.input :post_mortem , label: 'No. of Post Mortem' , input_html: { value: '0' }%></td>
      <td><%= f.input :remarks , label: 'Remarks' , input_html: {style: 'height:80px;'}%></td>
      <td></td>
  </tr>
  </tbody>
</table>                                 
  <div class="form-actions">
    <%= f.submit "Submit", :name => nil, :class => "btn-primary" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                hospital_performas_path, :class => 'btn' %>
  </div>
<% end %>
